
.campaign-overview
  %h6 Campaign Dashboard
  %h1= @campaign.name
  - if !@campaign.description.empty?
    %p= @campaign.description
  - else
    %p No description provided
  - if !@campaign.tags.empty?
    Tags:
    %ul.tags
      - @campaign.tags.split(',').each do |tag|
        %li= tag
  - else
    %p No tags provided
  %hr
  %p
    = link_to 'Edit Campaign', edit_account_campaign_path(@campaign)

.campaign-subscribers
  %h2 Subscribers

.campaign-messages
  %h2 Email Messages

.campaign-insights
  %h2 Insights
